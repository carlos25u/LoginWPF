<Window x:Class="LoginWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginWPF"
        mc:Ignorable="d"
        Title="Menu Principal " Height="350" Width="600">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Menu Height="18">
                <MenuItem Header="Registros">
                    <MenuItem Header="Usuarios" x:Name="UsuariosMenuItem" Click="UsuariosMenuItem_Click"></MenuItem>
                </MenuItem>

                <MenuItem Header="Consultas">
                    <MenuItem Header="Usuarios" x:Name="ConsultasUsuarios" Click="ConsultasUsuarios_Click"></MenuItem>
                </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
